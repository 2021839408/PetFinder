<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/foundPetImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:background="#DDDDDD"
            android:src="@drawable/app_logo"
            android:padding="10dp"
            android:layout_marginTop="80dp" />

        <Button
            android:id="@+id/btnPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert Picture"
            android:layout_gravity="center"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/inputPetColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pet Color"
            android:layout_marginTop="20dp" />

        <EditText
            android:id="@+id/inputAdditionalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Additional Info (Collar, Condition, etc)"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/inputFoundLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="Found At (GPS / Place)" />

            <Button
                android:id="@+id/btnPickLocation"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Map" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSubmitFoundPet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Submit Found Pet"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/light_blue_button"
            android:layout_marginTop="30dp" />

        <Button
            android:id="@+id/btnBackHome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Back to Home"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:background="@drawable/light_blue_button"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
