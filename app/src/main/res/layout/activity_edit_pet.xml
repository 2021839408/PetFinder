<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/backBtn">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/petImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="#DDDDDD"
                android:scaleType="centerCrop"/>

            <Button
                android:id="@+id/btnPickImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Image"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"/>

            <EditText
                android:id="@+id/petNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Name"
                android:layout_marginTop="20dp"/>

            <EditText
                android:id="@+id/petTypeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pet Type (Dog, Cat, etc)"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/petBreedInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Breed"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/petColorInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Color"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btnUpdatePet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Pet"
                android:layout_marginTop="25dp"
                android:textColor="#FFF"
                android:background="@drawable/light_blue_button"/>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/light_blue_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
