<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/titlePetDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pet Details"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlePetDetails"
        android:layout_above="@id/backBtn"
        android:layout_marginTop="20dp"
        android:paddingBottom="40dp">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/petImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:background="#DDDDDD"
                android:src="@drawable/placeholder"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/petName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pet Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/petType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/petBreed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Breed"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/petColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnEditPet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Edit Pet"
                android:textColor="#FFFFFF"
                android:background="@drawable/light_blue_button"
                android:textSize="18sp"
                android:layout_marginTop="25dp" />

            <Button
                android:id="@+id/btnDeletePet"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Delete Pet"
                android:textColor="#FFFFFF"
                android:background="@drawable/light_red_button"
                android:textSize="18sp"
                android:layout_marginTop="10dp" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:background="@drawable/light_blue_button"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>
